@model IEnumerable<Maintainance.Models.OurWork>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Dashboard.cshtml";
}

<h2>Index</h2>



<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive table-bordered well">
                    <div id="products-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                        <div class="row"><div class="col-sm-12 col-md-6"><div id="products-datatable_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="products-datatable"></label></div></div></div><div class="row">
                            <div class="col-sm-12">
                                <table class="table table-centered w-100 dt-responsive nowrap dataTable no-footer dtr-inline collapsed" id="products-datatable" role="grid" aria-describedby="products-datatable_info">
                                    <thead class="table-light">
                                        <tr role="row">
                                            <th class="all sorting_disabled dt-checkboxes-cell dt-checkboxes-select-all" data-col="0"> </th>
                                            <th class="all sorting sorting_asc" tabindex="0" aria-controls="products-datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Product: activate to sort column descending">الصورة</th>
                                            <th class="sorting" tabindex="0" aria-controls="products-datatable" rowspan="1" colspan="1" aria-label="Category: activate to sort column ascending">التفاصيل</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var data in Model)
                                        {
                                            <tr>
                                                <td class="dt-checkboxes-cell dtr-control" tabindex="0"><div class="form-check"><input type="checkbox" class="form-check-input dt-checkboxes"><label class="form-check-label">&nbsp;</label></div></td>
                                                <td>
                                                    <img src="@data.Image" alt="contact-img" title="contact-img" class="rounded me-3" height="48" />
                                                </td>
                                                <td>@data.Title</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body well">
                @{Html.RenderAction("CreateWork", "Work");}
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col-->
</div>
